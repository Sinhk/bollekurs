@page
@model IndexModel
@{
    ViewData["Title"] = "Bøllekurs";
}

<div class="text-center">
    <h1 class="display-4">Bøllekurs</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <img src="~/img/del1.png" asp-append-version="true" class="card-img-top" alt="Sakspapirer">
                <div class="card-body">
                    <h5 class="card-title">Del 1</h5>
                    <p class="card-text">Gjennomføres før kretsting</p>
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLScgD45nLR_KdAYTbjRt09MU--ieIkRuEhAN1rbK2qJV2Qjd5Q/viewform?usp=dialog" class="btn btn-primary">Start</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/del2.jpg" asp-append-version="true" class="card-img-top" alt="bollekurskort">
                <div class="card-body">
                    <h5 class="card-title">Del 2</h5>
                    <p class="card-text">Gjennomføres på kretsting</p>
                    @if (DateTime.UtcNow > new DateTime(2026, 02, 07, 0, 0, 0))
                    {
                        <a href="~/del2" class="btn btn-primary">Start</a>
                    }
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img src="~/img/bollekursmerke.jpg" asp-append-version="true" class="card-img-top" alt="bollekurskort">
                <div class="card-body">
                    <h5 class="card-title">Bøllekursmerket</h5>
                    <a href="~/Bøllekurs.pdf" class="btn btn-primary">Se merkekrav</a>
                </div>
            </div>
        </div>
    </div>
</div>
